<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginTop="5dp"
        tools:text="Lugar para el nombre"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/tv_studentLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_studentName"
        android:layout_marginTop="5dp"
        tools:text="Lugar para la categoria"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/tv_studentDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_studentLastName"
        android:layout_marginTop="5dp"
        tools:text="Precio: $99.99"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textColor="#1960A8"
        android:layout_marginStart="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>